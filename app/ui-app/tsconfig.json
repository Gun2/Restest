{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      //유틸리티
      "@_utils/*" : ["utils/*"],
      //타입
      "@_types/*" : ["types/*"],
      //api
      "@_apis/*" : ["apis/*"],
      //redux 모듈
      "@_modules/*" : ["modules/*"],
      //hooks
      "@_hooks/*" : ["hooks/*"]
    }
  },
}
